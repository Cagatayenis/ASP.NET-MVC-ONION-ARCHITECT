    <div class="layer"></div>


    <div class="modal fade" id="login_2" tabindex="-1" role="dialog" aria-labelledby="myLogin" aria-hidden="true" style="display: none;">
        <div class="modal-dialog" style="margin-top: 64.5px;">
            <div class="modal-content modal-popup">
                <a href="#" class="close-link"><i class="icon_close_alt2"></i></a>
                @*<form action="#" class="popup-form" id="myLogin">*@
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @id = "myLogin", @class = "popup-form" }))
                {
                    <div class="login_icon"><i class="icon_lock_alt"></i></div>
                    @*<input type="text" class="form-control form-white" placeholder="Username">*@
                    @Html.TextBox("UserName", null, new { @class = "form-control form-white", placeholder = "UserName" })
                    @*<input type="text" class="form-control form-white" placeholder="Password">*@
                    @Html.TextBox("Password", null, new { @class = "form-control form-white", placeholder = "Password", @type = "password", @id = "password1" })
                    
                    <button type="submit" class="btn btn-submit">Submit</button>
                }
                @*</form>*@
            </div>
        </div>
    </div>

    <!-- Register modal -->
    <div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="myRegister" aria-hidden="true" style="display: none;">
        <div class="modal-dialog" style="margin-top: 0px;">
            <div class="modal-content modal-popup">
                <a href="#" class="close-link"><i class="icon_close_alt2"></i></a>
                @*<form action="#" class="popup-form" id="myRegister">*@
                @using (Html.BeginForm("Insert", "AppUser", new { area = "Administrator" }, FormMethod.Post, new { @class = "popup-form" }))
                {
                    <div class="login_icon"><i class="icon_lock_alt"></i></div>
                    @Html.TextBox("UserName", null, new { @class = "form-control form-white", placeholder = "UserName" })
                    @*<input type="text" class="form-control form-white" placeholder="UserName">*@
                    @Html.TextBox("Name", null, new { @class = "form-control form-white", placeholder = "Name" })
                    @*<input type="text" class="form-control form-white" placeholder="Name">*@
                    @Html.TextBox("SurName", null, new { @class = "form-control form-white", placeholder = "SurName" })
                    @*<input type="text" class="form-control form-white" placeholder="Last Name">*@
                    @Html.TextBox("EmailAddress", null, new { @class = "form-control form-white", placeholder = "Email", @type = "email" })
                    @*<input type="email" class="form-control form-white" placeholder="Email">*@
                    @Html.TextBox("Password", null, new { @class = "form-control form-white", placeholder = "Password", @type = "password", @id = "password1" })
                    @*<input type="text" class="form-control form-white" placeholder="Password" id="password1">*@
                    @Html.TextBox("BirthDate", null, new { @class = "form-control form-white", placeholder = "Password", @type = "date" })
                    @*<input type="date" class="form-control form-white" placeholder="Dogum Tarihi" id="dtarih">*@
                    <div id="pass-info" class="clearfix"></div>
                    <div class="checkbox-holder text-left">
                        <div class="checkbox">
                            <input type="checkbox" value="accept_2" id="check_2" name="check_2">
                            <label for="check_2"><span>I Agree to the <strong>Terms &amp; Conditions</strong></span></label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-submit">Register</button>
                }
                @*</form>*@
            </div>
        </div>
    </div><!-- End Register modal -->
    <!-- COMMON SCRIPTS -->
