@model List<RestorantKategori>

@{
    ViewBag.Title = "Index";
}
@Html.ActionLink("Restorant Kategori Ekle", "Insert", "RestaurantKategori", null, new { @class = "btn btn-default" })
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Restorant Adi</th>
            <th>Kategori Adi </th>
            <th>Olusturulma Tarihi</th>
            <th>Durum</th>
            <th>####</th>
        </tr>
    </thead>
    <tbody>
        @foreach (RestorantKategori item in Model)
        {
            <tr>

                @if (item.RestaurantID == null)
                {
                    <td>--</td>
                }
                else
                {
                    <td>@item.Restaurant.Name</td>
                }
                @if (item.CategoryID == null)
                {
                    <td>--</td>
                }
                else
                {
                    <td>@item.Category.Name</td>
                }
                <td>@item.CreatedDate</td>
                <td>
                    @if (item.Status != Status.Deleted)
                    {
                        <span style="background-color:#1daa1c; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                    else
                    {
                        <span style="background-color:#ff0000; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Update", "RestaurantKategori", new { id = item.ID, area = "Administrator" }, null) |

                    @Html.ActionLink("Sil", "Delete", "RestaurantKategori", new { id = item.ID, area = "Administrator" }, null)
                </td>
            </tr>
        }
    </tbody>
</table>

