@model RestorantKategori
@{
    ViewBag.Title = "Restorant Kategori Güncelle";
}

<h2>Restorant Kategori Güncelle</h2>

@using (Html.BeginForm("Update", "RestaurantKategori", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.CreatedDate)
    @Html.HiddenFor(m => m.CreatedIP)
    @Html.HiddenFor(m => m.Status)
    @Html.HiddenFor(m => m.ModifiedDate)
    @Html.HiddenFor(m => m.ModifiedIP)

<div class="form-group">
    <label for="MenuAdi">Restorant Seciniz:</label>
    @Html.DropDownList("RestaurantID", null, htmlAttributes: new { @class = "form-control" })
</div>
<div class="form-group">
    <label for="MenuAdi">Kategori Seciniz:</label>
    @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
</div>
    <button type="submit" class="btn btn-default">Güncelle</button>
}
