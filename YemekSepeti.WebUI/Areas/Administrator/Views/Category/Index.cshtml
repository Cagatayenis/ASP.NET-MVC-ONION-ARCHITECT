@model List<Category>
@{
    ViewBag.Title = "Kategori Listesi";
}

<h2> Kategori Listesi</h2>
@Html.ActionLink("Kategori Ekle", "Insert", "Category", null, new { @class = "btn btn-default" })
<hr />
<table class="table table-hover">
    <thead>
        <tr>
            <th>Kategori Adi</th>
            <th>Aciklama</th>
            <th>Olusturulma Tarihi</th>
            <th>Durum</th>
            <th>####</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate</td>
                <td>
                    @if (item.Status != Status.Deleted)
                    {
                        <span style="background-color:#1daa1c; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                    else
                    {
                        <span style="background-color:#ff0000; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Update", "Category", new { id = item.ID, area = "Administrator" }, null) |

                    @Html.ActionLink("Sil", "Delete", "Category", new { id = item.ID, area = "Administrator" }, null)
                </td>
            </tr>
        }


    </tbody>

</table>


