@model List<District>
@{
    ViewBag.Title = "Semt Listele";
}

<br />

@Html.ActionLink("Semt Ekle", "Insert", "District", null, new { @class = "btn btn-default" })

<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Semt Adi</th>
            <th>İlçe Adi</th>
            <th>Olusturulma Tarihi</th>
            <th>Durum</th>
            <th>####</th>
        </tr>
    </thead>
    <tbody>
        @foreach (District item in Model)
        {
            <tr>
                <td>@item.DistrictName</td>
                <td>@(item.CountryID != null ? item.Country.CountryName : "-")</td>
                <td>@item.CreatedDate</td>
                <td>
                    @if (item.Status != Status.Deleted)
                    {
                        <span style="background-color:#1daa1c; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                    else
                    {
                        <span style="background-color:#ff0000; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Update", "District", new { id = item.ID, area = "Administrator" }, null) |

                    @Html.ActionLink("Sil", "Delete", "District", new { id = item.ID, area = "Administrator" }, null)
                </td>
            </tr>
        }


    </tbody>

</table>
