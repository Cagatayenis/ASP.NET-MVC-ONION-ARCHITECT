@model District
@{
    ViewBag.Title = "Semt Güncelle";
}

<h2>Update</h2>

@using (Html.BeginForm("Update", "District", FormMethod.Post))
{
    <div class="form-group">
        <label for="CountryName">Semt Adi:</label>
        @Html.TextBoxFor(m => m.DistrictName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="name">Ilçe Seciniz:</label>
        @Html.DropDownList("CountryID", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Güncelle</button>
}

