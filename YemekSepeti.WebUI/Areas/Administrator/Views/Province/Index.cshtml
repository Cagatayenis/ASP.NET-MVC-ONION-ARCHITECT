@model List<Province>
@{
    ViewBag.Title = "İl Listesi";
}

<h2>Index</h2>

@Html.ActionLink("İl Ekle", "Insert", "Province", null, new { @class = "btn btn-default" })

<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>İl Adi</th>
            <th>Olusturulma Tarihi</th>
            <th>Durum</th>
            <th>####</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Province item in Model)
        {
            <tr>
                <td>@item.ProvinceName</td>
                <td>@item.CreatedDate</td>
                <td>
                    @if (item.Status != Status.Deleted)
                    {
                        <span style="background-color:#1daa1c; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                    else
                    {
                        <span style="background-color:#ff0000; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Update", "Province", new { id = item.ID, area = "Administrator" }, null) |

                    @Html.ActionLink("Sil", "Delete", "Province", new { id = item.ID, area = "Administrator" }, null)
                </td>
            </tr>
        }


    </tbody>

</table>

