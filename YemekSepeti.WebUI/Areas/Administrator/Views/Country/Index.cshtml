@model List<Country>
@{
                /**/

                ViewBag.Title = "İlçe Listesi";
}
<br />

@Html.ActionLink("İlçe Ekle", "Insert", "Country", null, new { @class = "btn btn-default" })

<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>İlçe Adi</th>
            <th>İl Adi</th>
            <th>Olusturulma Tarihi</th>
            <th>Durum</th>
            <th>####</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Country item in Model)
        {
            <tr>
                <td>@item.CountryName</td>
                <td>@(item.ProvinceID != null ? item.Province.ProvinceName : "-")</td>
                <td>@item.CreatedDate</td>
                <td>
                    @if (item.Status != Status.Deleted)
                    {
                        <span style="background-color:#1daa1c; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                    else
                    {
                        <span style="background-color:#ff0000; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Update", "Country", new { id = item.ID, area = "Administrator" }, null) |

                    @Html.ActionLink("Sil", "Delete", "Country", new { id = item.ID, area = "Administrator" }, null)
                </td>
            </tr>
        }


    </tbody>

</table>

