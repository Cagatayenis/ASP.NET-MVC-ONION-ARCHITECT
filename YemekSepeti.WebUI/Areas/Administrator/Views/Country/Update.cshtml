@model Country
@{
    ViewBag.Title = "İlçe Güncelle";
}

<h2>Update</h2>

@using (Html.BeginForm("Update", "Country", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.CreatedDate)
    @Html.HiddenFor(m => m.CreatedIP)
    @Html.HiddenFor(m => m.Status)
    @Html.HiddenFor(m => m.ModifiedDate)
    @Html.HiddenFor(m => m.ModifiedIP)

    <div class="form-group">
        <label for="CountryName">ilçe Adi:</label>
        @Html.TextBoxFor(m => m.CountryName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="name">Il Seciniz:</label>
        @Html.DropDownList("ProvinceID", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Güncelle</button>
}

