@model List<Meal>
@{
    ViewBag.Title = "Yemek Listesi";
}

<h2>Yemek Listesi</h2>
@Html.ActionLink("Yemek Ekle", "Insert", "Meal", null, new { @class = "btn btn-default" })
<hr />
<table class="table table-hover">
   <thead>
       <tr>
           <th>Yemek Adi</th>
           <th>Aciklama</th>
           @*<th>Resim</th>*@
           <th>Fiyat</th>
           <th>Kategori Adi</th>
           <th>Restorant Adi</th>
           <th>Durum</th>
           <th>####</th>
           @*<th></th>*@
       </tr>
   </thead>
    <tbody>
        @foreach(Meal item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @*<td>@item.imagePath</td>*@
            <td>@item.Price</td>
            <td>@(item.CategoryID != null ? item.Category.Name : "-")</td>
            <td>@(item.RestaurantID != null ? item.Restaurant.Name : "-")</td>
            <td>
                @if (item.Status != Status.Deleted)
                {
                    <span style="background-color:#1daa1c; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                }
                else
                {
                    <span style="background-color:#ff0000; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                }
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Update", "Meal", new { id = item.ID, area = "Administrator" }, null) |

                @Html.ActionLink("Sil", "Delete", "Meal", new { id = item.ID, area = "Administrator" }, null)
            </td>


        </tr>
        }
    </tbody>
 </table>
