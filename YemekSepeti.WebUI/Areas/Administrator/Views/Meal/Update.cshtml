@model Meal
@{
    /**/

    ViewBag.Title = "Yemek Güncelle";
}

@using (Html.BeginForm("Update", "Meal", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.CreatedDate)
    @Html.HiddenFor(m => m.CreatedIP)
    @Html.HiddenFor(m => m.Status)
    @Html.HiddenFor(m => m.ModifiedDate)
    @Html.HiddenFor(m => m.ModifiedIP)

    <div class="form-group">
        <label for="Name">Yemek adi:</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Name">Aciklama:</label>
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="image">Resim:</label>
        <input type="file" name="fluResim" />
    </div>
    <div class="form-group">
        <label for="Fiyat">Fiyat:</label>
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="name">Kategori Seciniz:</label>
        @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="name">Restorant Seciniz:</label>
        @Html.DropDownList("RestaurantID", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Güncelle</button>
}

