@model Address
@{
    /**/

    ViewBag.Title = "Adres Ekle";
}

@using (Html.BeginForm("Insert", "Address", FormMethod.Post))
{

    <div class="form-group">
        <label for="CountryName">Acik Adres:</label>
        @Html.TextAreaFor(m => m.FullAddress, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="name">Restorant Seciniz:</label>
        @Html.DropDownList("RestaurantID",null, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="name">Il Seciniz:</label>
        @Html.DropDownList("ProvinceID", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="name">Ilçe Seciniz:</label>
        @Html.DropDownList("CountryID", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="name">Semt Seciniz:</label>
        @Html.DropDownList("DistrictID", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Kaydet</button>
}

