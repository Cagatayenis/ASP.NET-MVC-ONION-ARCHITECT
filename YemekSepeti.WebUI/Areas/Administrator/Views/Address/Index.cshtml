@model List<Address>
@{
    ViewBag.Title = "Adres Listesi";
}

<br />

@Html.ActionLink("Adres Ekle", "Insert", "Address", null, new { @class = "btn btn-default" })

<hr />
<table class="table table-hover">
    <thead>
        <tr>
            <th>Acik Adresi</th>
            <th>Restorant Adi</th>
            <th>İl</th>
            <th>ilçe</th>
            <th>Semt</th>
            <th>Durum</th>
            <th>####</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Address item in Model)
        {
            <tr>


                <td>@item.FullAddress</td>
                <td>@(item.RestaurantID!= null ? item.Restaurant.Name : "-")</td>
                <td>@(item.ProvinceID != null ? item.Province.ProvinceName : "-")</td>

                <td>@(item.CountryID != null ? item.Country.CountryName : "-")</td>
                <td>@(item.DistrictID != null ? item.District.DistrictName : "-")</td>
                <td>
                    @if (item.Status != Status.Deleted)
                    {
                        <span style="background-color:#1daa1c; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                    else
                    {
                        <span style="background-color:#ff0000; font-weight:bold; color:#ffffff; padding:5px 10px;">@item.Status</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Update", "Address", new { id = item.ID, area = "Administrator" }, null) |

                    @Html.ActionLink("Sil", "Delete", "Address", new { id = item.ID, area = "Administrator" }, null)
                </td>
            </tr>
        }
    </tbody>
</table>


